<h1>Listing Devices</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Equipment Type</th>
    <th>Telecom Room</th>
    <th>Serial number</th>
    <th>Asset number</th>
    <th>Manufacturer</th>
    <th>End of life</th>
  </tr>

<% @devices.each do |device| %>
  <tr>
    <td><%=h device.name %></td>
    <td><%= link_to device.equipment_type, device.equipment_type %></td>
    <td><%= link_to device.telecom_room, device.telecom_room %></td>
    <td><%=h device.serial_number %></td>
    <td><%=h device.asset_number %></td>
    <td><%=h device.manufacturer %></td>
    <td><%=h device.end_of_life %></td>
    <td><%= link_to 'Show', device %></td>
    <td><%= link_to 'Edit', edit_device_path(device) %></td>
    <td><%= link_to 'Destroy', device, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

