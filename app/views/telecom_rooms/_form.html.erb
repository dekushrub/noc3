<% semantic_form_for @telecom_room do |f| %>
<% f.inputs do %>
  <%= f.input :floor, :label => 'Floor' %>
  <%= f.input :room, :label => 'Room' %>
  <%= f.input :building_id, :label => 'Building', :collection => Building.all %>
<% end %>
<% f.buttons do %>
  <%= f.commit_button %>
<% end %>
<% end %>
