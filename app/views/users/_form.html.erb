<% semantic_form_for @user do |f| %>
<% f.inputs do %>
  <%= f.input :login, :label => 'Login' %>
  <%= f.input :email, :label => 'Email' %>
  <%= f.input :password, :label => 'Password' %>
  <%= f.input :password_confirmation, :label => 'Password Confirmation' %>
  <%= f.input :admin, :label => 'Admin' %>
<% end %>
<% f.buttons do %>
  <%= f.commit_button %>
<% end %>
<% end %>
